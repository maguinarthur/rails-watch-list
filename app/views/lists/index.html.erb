<div class="container">
  <div class="d-flex justify-content-between">
    <h2 class="mb-0"><strong>My movie lists</strong></h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
  </div>
  <h6><%= @lists.count %> movies.</h6>
  <div class="row">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="col-4 mt-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
            <%= link_to list.name, list_path(list), class: "btn btn-outline-light" %>
          </div>
        </div>
      <% else %>
        <div class="col-4 mt-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/hbz-classic-movies-an-american-in-paris-gettyimages-121649709-1590707825.jpg')">
            <%= link_to list.name, list_path(list), class: "btn btn-outline-light" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
